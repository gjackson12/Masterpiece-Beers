<div class="row">
  <div class="col-md-4 col-md-offset-2">
    <%= image_tag @beer_label.image_url(:show_thumb).to_s %>
  </div>
  <div class="col-md-5">
    <div class="facts-section">
      <dl class="dl-horizontal">
        <h2><dt><strong>Name:</strong><dt></h2>
        <dd><%= @beer_label.beer_name %></dd>
        <h2><dt><strong>Brewery:</strong></dt></h2>
        <dd><%= @beer_label.brewery %></dd>
        <h2><dt><strong>Origin:</strong></dt></h2>
        <dd><%= @beer_label.origin %></dd>
        <h2><dt><strong>Tags:</strong></dt></h4>
        <dd><%= @beer_label.tag %></dd>
      </dl>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <h1>Votes:
        <%= vote_count_display(@beer_label) %>
    </h1>
    <% if user_signed_in? %>
      <div class='dis-like-btn'>
        <%= link_to "Like", upvote_beer_label_path, class:'btn btn-success btn-lg' %>
        <%= link_to "Dislike", downvote_beer_label_path, class:'btn btn-danger btn-lg' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-5">
    <blockquote>
      <h1>"<%= @beer_label.description %>"</h1>
      <small><%= @beer_label.user.email %></small>
    </blockquote>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if user_signed_in? %>
      <h2 class="add-comment-field">Add a comment:</h2>
      <%= render "comments/form" %>
    <% end %>
      <h2 class="comments-field">Comments</h2>
      <%= render @beer_label.comments %>
      <%= link_to 'Back to Beer Labels', beer_labels_path %>
  </div>
</div>